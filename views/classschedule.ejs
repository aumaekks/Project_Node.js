</head>


<body>
    <!-- upper bar -->
    <div>
        <div>
            <div class="card-body" style="font-size:30px; background-color: rgba(255, 255, 255, 0.347);">
                <h1 class="fixed" style= "font-size:40px; color:white;">HEALTHCLUB</h1><center>
                <a style='color:rgb(0, 0, 0);'href="/">Home</a> &nbsp;&nbsp;
                <a style='color:rgb(0, 0, 0);' href="/schedule">Schedule</a> &nbsp;&nbsp;
                <a style='color:rgb(0, 0, 0);' href="/rating">Rating</a> &nbsp;&nbsp;
                <a style='color:rgb(0, 0, 0);' href="/bookinglist">Booking cart</a> &nbsp;&nbsp;
                <a style='color:rgb(0, 0, 0);' href="/profile"><%= name %></a> &nbsp;&nbsp;
                <a href="/logout" class="btn btn-danger">Logout</a></center>
            </div>
            <div>
                
            </div>
        </div>
    </div>
    
    <% 
    
    console.log(class_schedule);
    console.log(counts);
     const time = ['','08:00:00','09:00:00','10:00:00','11:00:00','12:00:00','13:00:00','14:00:00','15:00:00','16:00:00']; 
     const day = ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'];
    %>
    <!-- body -->
    <div class="tablescale mx-auto mt-2">
        <h1 class="mx-auto">Exercise Class : <%=class_name %></h1>  
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                    <th>Day/Time</th> 
                    <th>8.00-9.00</th>
                    <th>9.00-10.00</th>
                    <th>10.00-11.00</th>
                    <th>11.00-12.00</th>
                    <th>12.00-13.00</th>
                    <th>13.00-14.00</th>
                    <th>14.00-15.00</th>
                    <th>15.00-16.00</th>
                    <th>16.00-17.00</th>
                    </tr>
                </thead>
                <% for (let i = 0; i < 7; i++) { 
                %>
                <tbody>
                    <tr>
                    <%
                    for(let j = 0 ; j < 10; j++){
                        if(j==0){
                            %>
                            <td class="font-weight-bold"><%=day[i] %></td>
                            <%
                        }else{
                            let found = false;
                            class_schedule.forEach((data)=>{
                                
                                if(data.class_day==day[i] && data.class_time == time[j]){
                                    var index_ = class_schedule.indexOf(data);
                                    %>
                                    <td>Available<br>
                                        
                                        capacity : <%= counts[index_] %> / <%=data.capacity %><br>
                                        price : <%=data.price %> Bath<br>
                                        point : <%=data.point %>
                                        <br><a href="/classsearch?t_book_id=<%= data.classschedule_id %>"><button class="btn btn-info">Book Exercise Class</button></a></td>
                                    <%
                                    found = true;
                                }
                                
                            })
                            if(!found){
                                %>
                                <td></td>
                                <%
                            }
                        }
                    }
                    %>
                    </tr>
                </tbody>
                  <%
                 } %>
              </table>
    </div>
    <div class="text-center">
        <a href="/classsearch"><button class="btn btn-danger ">back</button></a>
    </div>
</body>
