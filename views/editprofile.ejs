            <h1>Edit Profile</h1>
                    
            <form action="/edit-profile" method="POST">

                <input type="text" name="name" class="buttonpro" value="<%= name %>"><br><br>
                <input type="text" name="email" class="buttonpro" value="<%= email %>"><br><br>
                <select id="gender" name="gender" class="buttonpro">
                    <option value="m" {% if gender == "m" %}selected{% endif %}>Male</option>
                    <option value="f" {% if gender == "f" %}selected{% endif %}>Female</option>
                
                </select>
                <br><br>



                <button type="submit" class="buttonpro">Save Changes</button>
